{{>header}}
<title>CRUD App</title>

{{>navbar}}
<div class="container-fluid center">
    <p class="background text-light text-center p-2 my-2">Add Employee Record</p>
    <form action="/add" method="post">
        <div class="mb-3">
            <input type="text" name="name" placeholder="Enter Your Full Name" class="form-control bordercolor" value={{data.name}}>
            {{#if geterrors.name}}
            <p class="text-danger">{{geterrors.name}}</p>
            {{/if}}
        </div>

        <div class="row mb-3">
            <div class="col-md-6 mb-3">
                <input type="email" name="email" placeholder="Email Address*" class="form-control bordercolor" value={{data.email}}>
                {{#if geterrors.email}}
                <p class="text-danger">{{geterrors.email}}</p>
                {{/if}}
            </div>
            <div class="col-md-6">
                <input type="number" name="number" placeholder="Phone Number*" class="form-control bordercolor" value={{data.number}}>
                {{#if geterrors.number}}
                <p class="text-danger">{{geterrors.number}}</p>
                {{/if}}
            </div>
        </div>


        <div class="row mb-3">
            <div class="col-md-6 mb-3">
                <input type="text" name="dsg" placeholder="Designation" class="form-control bordercolor" value={{data.dsg}}>
                {{#if geterrors.dsg}}
                <p class="text-danger">{{geterrors.dsg}}</p>
                {{/if}}
            </div>
            <div class="col-md-6">
                <input type="number" name="salary" placeholder="Salary" class="form-control bordercolor" value={{data.salary}}>
                {{#if geterrors.salary}}
                <p class="text-danger">{{geterrors.salary}}</p>
                {{/if}}
            </div>
        </div>


        <div class="row mb-3">
            <div class="col-md-6 mb-3">
                <input type="text" name="city" placeholder="City Name" class="form-control bordercolor">
            </div>
            <div class="col-md-6">
                <input type="text" name="state" placeholder="State Name" class="form-control bordercolor">
            </div>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btnClass text-light w-100">Create</button>
        </div>
    </form>
</div>
{{>footer}}